<%- include ("partials/header") %>

<div class="main">
    <div id="compt">
        <div class="views ps">
            <h3>Total des likes de la page</h3>
            <p>0 vues</p>
        </div>
        <div class="likes ps">
            <h3>Total des vues de la page</h3>
            <p>0 vues</p>
        </div>
    </div>
    <% if(locals.articles) {%>
    <% let arts = JSON.stringify(articles) %>
    <% let artss = JSON.parse(arts) %>
    <table>
        <thead>
            <% for(let art in artss[0]) {%>
            <th><%=art%></th>
            <% } %>
            <th>Actions</th>
        </thead>
        <tbody>
            <% for(let element of artss) {%>
            <tr>
                <% for(let ar in element) {%>
                <% if(ar != "__v" && ar != "image") {%>
                <% if(ar == "_id") {%>
                <td><%= element[ar].slice(0,8)+"..."%></td>
                <% }else if(ar=="article"){ %>
                <td><%= element[ar].slice(0,40)+"..."%></td>
                <% }else{ %>
                <td><%= element[ar]%></td>
                <% }}} %>
                <td><a href="" class="view">Voir profil</a><a class="del"
                        href="/admin/cfremove/<%= element["_id"]%>">Supprimer</a><a
                        href="/admin/mod/<%= element["_id"]%>" class="mod">Modifier</a>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <% } %>
</div>

<%- include ("partials/footer") %>